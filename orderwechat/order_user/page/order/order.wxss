/* 下拉加载更多 */
.scrollcontent{  
  flex: auto;   
  position: relative;  
}  
 .scrollarea{
  height: 500px;
  /* border: 1px solid #DE5F4B; */
} 
::-webkit-scrollbar{
  height: 0rpx;
  width: 0rpx;
  color: transparent;
}
.scrollcontent scrollview{  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  top: 0;   
}  
.shop{
  position: relative;  
  display: flex;  
  flex-direction: column;  
  padding: 20rpx 0 20rpx 110rpx;  
  overflow: hidden;  
  border-bottom: 2rpx solid #e5e5e5;   
}
.loading{  
  padding: 10rpx;  
  text-align: center; 
  margin: 1rpx 0rpx; 
}  
.loading:before{  
  /* display: inline-block;   */
  margin-right: 5rpx;  
  vertical-align: middle;  
  content: '';   
  width: 40rpx;  
  height: 40rpx;  
  background-size: contain;   
  animation: rotate 1s linear infinite;   
}  
.loading.complete:before{  
  display: none;  
}
.imgs{
  width: 50rpx;
  height: 50rpx;
  margin-left: 180rpx;
  margin-top: 8rpx;
}
.loadingview{
  display: flex;
}
